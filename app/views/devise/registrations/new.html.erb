
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
<%= devise_error_messages! %>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <h1>Sign up</h1>
  </div>
</div>

<div class="form-group">
   <%= f.label :username, class: "col-sm-2 control-label" %>

   <div class="col-sm-3">
     <%= f.text_field :username, autofocus: true, placeholder: "username", class: "form-control" %>
   </div>
</div>

<div class="form-group">
  <%= f.label :email, class: "col-sm-2 control-label" %>

  <div class="col-sm-3">
    <%= f.email_field :email, autofocus: false, placeholder: "email address", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :password, class: "col-sm-2 control-label" %>

  <div class="col-sm-3">
    <%= f.password_field :password, autocomplete: "off", placeholder: "create password", class: "form-control" %>
  </div>

  <% if @validatable %>
  <p class="help-block">(<%= @minimum_password_length %> characters minimum)</p>
  <% end %>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, class: "col-sm-2 control-label" %>

  <div class="col-sm-3">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirm password", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-3">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
<% end %>
